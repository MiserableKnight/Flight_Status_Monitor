# -*- coding: utf-8 -*-
# 航班数据抓取系统核心配置文件
#
# 说明：
# - credentials: 系统登录凭证
# - paths: 本地存储路径配置
# - target: 系统URL配置
# - aircraft: 监控飞机列表
# - urls: 各模块URL特征关键词
# - scheduler: 任务调度时间配置
# - gmail: Gmail通知配置（可选）

[credentials]
# 系统登录账号和密码
username = YOUR_USERNAME_HERE
password = YOUR_PASSWORD_HERE

[paths]
# 浏览器用户数据目录（用于保持登录状态）
user_data_path = D:\Code\flight_data_daily_get\chrome_debug

[target]
# 系统首页URL
url = https://cis.comac.cc:8004/caphm/mainController/index.html

[aircraft]
# 要监控的飞机号列表（用逗号分隔）
# 支持格式：B-XXXX 或 C909-XXX/B-XXXX
aircraft_list = B-652G, B-656E

[urls]
# 系统各模块的URL特征关键词（用于智能导航检测）
home = mainController/index.html
integrated_monitor = integratedMonitor/index.html
capacity_statistics = lineLogNewController/indexSF.html
login_keywords = login,rbacUsersController,auth

[scheduler]
# 任务调度时间配置（24小时制）
# 格式：HH:MM
# start_time: 系统启动时间
# end_time: 系统停止时间
# flight_fetch_times: 航班数据抓取时间（多个时间用逗号分隔）
# faults_fetch_times: 故障数据抓取时间（多个时间用逗号分隔）
start_time = 06:30
end_time = 21:00
flight_fetch_times = 07:00, 12:00, 18:00
faults_fetch_times = 08:00, 14:00, 20:00

[gmail]
# Gmail通知配置（可选）
# 如需启用邮件通知，请配置以下项
# 发件人邮箱地址
sender_email = your_email@gmail.com
# Gmail应用专用密码（非账号密码）
# 生成地址：https://myaccount.google.com/apppasswords
app_password = your_app_password
# 收件人邮箱（多个收件人用逗号分隔）
recipients = recipient1@example.com, recipient2@example.com
